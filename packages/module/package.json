{
  "name": "@solarwinds-apm/module",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "contributors": [
    "Raphaël Thériault <raphael.theriault@solarwinds.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/solarwindscloud/solarwinds-apm-js.git",
    "directory": "packages/require"
  },
  "bugs": {
    "url": "https://github.com/solarwindscloud/solarwinds-apm-js/issues"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "main": "./dist/cjs/index.js",
  "files": [
    "./src/",
    "./dist/"
  ],
  "publishConfig": {
    "provenance": true
  },
  "scripts": {
    "build": "tsc && tsc -p ./tsconfig.cjs.json && node ../../scripts/cjs.js ./dist/cjs",
    "lint": "prettier --check . && eslint . --max-warnings=0",
    "lint:fix": "eslint --fix . && prettier --write .",
    "publish": "node ../../scripts/publish.js"
  },
  "devDependencies": {
    "@solarwinds-apm/eslint-config": "workspace:^",
    "@types/node": "^16.13.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16"
  }
}
