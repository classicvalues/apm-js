{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "es2021",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    // not included in strict mode but useful
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  }
}
