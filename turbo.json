{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "build.js",
        "package.json",
        "tsconfig.json",
        "tsconfig.build.json",
        "src/**"
      ],
      "outputs": ["dist/**", "npm/*/oboe.node", "npm/*/liboboe-1.0.so.0"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "start": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": [
        "package.json",
        "tsconfig.json",
        "src/**",
        "test/**",
        "npm/*/oboe.node",
        "npm/*/liboboe-1.0.so.0"
      ],
      "env": ["TEST_SERVICE_KEY", "TEST_COLLECTOR"],
      "outputs": []
    }
  },
  "globalDependencies": [
    ".clang-format",
    ".prettierrc.json",
    ".yarnrc.yml",
    "tsconfig.base.json",
    "yarn.lock",
    "packages/eslint-config/index.js"
  ]
}
